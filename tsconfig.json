{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        //"declaration": true,                   // 生成相应的 '.d.ts' 文件
        "target": "ES5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "charset": "utf8"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}